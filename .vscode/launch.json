  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "OTA Server (Dev)",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/api",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "envFile": "${workspaceFolder}/api/.dev.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Admin Server (Stage)",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev:admin"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/api",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "envFile": "${workspaceFolder}/api/.admin-stage.env"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Node",
      "processId": "${command:PickProcess}",
      "restart": true
    }
  ]
}
